# Configuración optimizada para deployment en Render
# Evita problemas con dependencias nativas como sharp

# Evitar compilación desde código fuente cuando sea posible
prefer-offline=false
prefer-online=true

# Sharp específico - evitar compilación desde fuente
sharp_binary_host=https://github.com/lovell/sharp-libvips/releases/download/
sharp_libvips_binary_host=https://github.com/lovell/sharp-libvips/releases/download/

# Configuración de registry y timeouts
registry=https://registry.npmjs.org/
timeout=120000
fetch-timeout=120000
fetch-retry-maxtimeout=120000

# Configuración para builds en CI
progress=false
audit=false

# Evitar problemas con peer dependencies
legacy-peer-deps=false
strict-peer-deps=false

# Configuración de caché optimizada
cache-max=86400000 