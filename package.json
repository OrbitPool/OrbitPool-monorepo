{
  "name": "community-wallet",
  "version": "1.0.0",
  "description": "Wallet Grupal para Ahorro Comunitario - Democratizando el ahorro comunitario con blockchain",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.0.0",
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:frontend": "turbo dev --filter=frontend",
    "dev:backend": "turbo dev --filter=backend",
    "build": "chmod +x build.sh && ./build.sh",
    "build:render": "bun install --frozen-lockfile && turbo build",
    "build:frontend": "turbo build --filter=frontend",
    "build:backend": "turbo build --filter=backend",
    "build:contracts": "turbo build --filter=contracts",
    "test": "turbo test",
    "test:all": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "turbo test:e2e --filter=frontend",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "db:setup": "turbo db:setup --filter=backend",
    "db:migrate": "turbo db:migrate --filter=backend",
    "db:seed": "turbo db:seed --filter=backend",
    "deploy:contracts": "turbo deploy --filter=contracts",
    "start": "turbo start",
    "postinstall": "echo 'Instalaci√≥n completada - listo para build'"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "node-gyp": "^9.0.0",
    "prettier": "^3.1.0",
    "turbo": "2.5.4",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "blockchain",
    "stellar",
    "soroban",
    "defi",
    "savings",
    "community",
    "wallet",
    "group-savings",
    "web3",
    "fintech",
    "latinamerica"
  ],
  "author": "Francisco Campos & Anouk Rimola",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/communityWallet.git"
  },
  "homepage": "https://github.com/tu-usuario/communityWallet#readme",
  "bugs": {
    "url": "https://github.com/tu-usuario/communityWallet/issues"
  },
  "dependencies": {
    "pg": "8.16.3"
  }
}
